{# src/GB/UserBundle/Resources/views/User/forgot.html.twig #}

{% extends "admin/_admin_layout.html.twig" %}

{% block title %}Snowtricks: MdP oublié{% endblock %}

{% block content %}
    <div class="col-sm-9 col-md-9 col-lg-6 col-xl-5 well">
        {{ form_start(form) }}
        <div>
            <H2>Réinitialisation du mot de Passe :</H2>
        </div>
        <div class="col-sm-12 col-md-8 col-xl-12">
            <div class="form-group">
                {{ form_label(form.userName, "Nom d'utilisateur :", {'label_attr': {'class': 'col-form-label col-form-label-sm'} }) }}
                {{ form_widget(form.userName) }}
                {{ form_errors(form.userName) }}
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" name="confirm" />Confirmer</button>
        </div>
        {{ form_rest(form) }} 
        {{ form_end(form) }}     
    </div>
{% endblock %}
