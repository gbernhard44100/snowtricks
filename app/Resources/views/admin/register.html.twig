{% extends 'admin/_admin_layout.html.twig' %}

{% block content %}
    <div class="col-sm-12 col-md-7 col-lg-6 col-xl-4 well">
        <h2>Inscription :</h2>
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.userName, "Nom d'utilisateur :", {'label_attr': {'class': 'col-form-label col-form-label-sm'} }) }}
                {{ form_widget(form.userName) }}
                {{ form_errors(form.userName) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email, "Adresse E-mail :", {'label_attr': {'class': 'col-form-label col-form-label-sm'} }) }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group">
                {{ form_label(form.password, "Mot de passe :", {'label_attr': {'class': 'col-form-label col-form-label-sm'} }) }}
                {{ form_widget(form.password) }}
                {{ form_errors(form.password) }}
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="S'inscrire" />
            </div>
            <div class="hidden">
                {{ form_rest(form) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}    