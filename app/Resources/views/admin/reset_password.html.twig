{% extends "admin/_admin_layout.html.twig" %}

{% block title %}Snowtricks: Nouveau mot de passe{% endblock %}

{% block content %}
    <div class="col-sm-12 col-md-12 col-lg-10 col-xl-6 well"> 
        <H2>Modification du mot de passe pour : <strong>{{ user.userName }}</strong></H2>
        {{ form_start(form) }}
            <div class="col-12">
                <div class="form-group">
                    {{ form_label(form.password, "Nouveau mot de passe :", {'label_attr': {'class': 'col-form-label col-form-label-sm'} }) }}</br>
                    {{ form_widget(form.password) }}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" value="NewPassword">
                        Modifier le mot de passe
                    </button>
                </div>
            </div>
            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
